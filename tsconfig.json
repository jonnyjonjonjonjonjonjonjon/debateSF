{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./backend/src",
    "declaration": true,
    "skipLibCheck": true
  },
  "include": ["backend/src/**/*"],
  "exclude": ["node_modules", "dist"]
}